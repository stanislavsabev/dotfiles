#!/usr/bin/env bash

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'


# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../..'
alias home='cd'
alias dev='cd ~/dev'

# Python venv aliases
alias va='source ./venv/bin/activate'
alias da='deactivate'
alias makevenv='python -m venv venv && va'
alias uppip='python -m pip install --upgrade pip'
alias pir='pip install -r '

# util aliases
alias aliases="code $DOTFILES_DIR/.aliases"
alias functions="code $DOTFILES_DIR/.functions"
alias dotfiles="code -n $DOTFILES_DIR"
alias gitconfig="code ~/.gitconfig"
alias gitconfig_local="code .git/config"

# other
alias path="echo $PATH"