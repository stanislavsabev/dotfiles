{
    "workbench.sideBar.location": "left",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.repositories.autoRefresh": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.repositories.avatars": false,
    "scm.diffDecorationsGutterWidth": 1,
    "gitlens.keymap": "none",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "breadcrumbs.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "Source Code Pro",
    "workbench.colorTheme": "Dracula",
    "editor.semanticTokenColorCustomizations": {
        "[azure]": {
            "enabled": true
        }
    },
    "editor.tokenColorCustomizations": {
        "[Flatland Monokai]": {
            "variables": "#AE81FF",
            "strings": "#F9D43E",
            "textMateRules": [
                {
                    "scope": [
                        "comment",
                        "variable",
                        "entity.other.attribute-name"
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword",
                    "settings": {
                        "fontStyle": "italic bold"
                    }
                }
            ]
        },
        "[azure]": {
            "variables": "#b46274",
            "textMateRules": [
                {
                    "scope": [
                        "keyword",
                        "entity.name.function"
                    ],
                    "settings": {
                        "foreground": "#508aaa",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "meta",
                    "settings": {
                        "foreground": "#f8f8f0"
                    }
                },
                {
                    "scope": [
                        "variable.parameter"
                    ],
                    "settings": {
                        "foreground": "#b46274",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": [
                        "entity.other.attribute-name"
                    ],
                    "settings": {
                        "foreground": "#b46274",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": [
                        "comment"
                    ],
                    "settings": {
                        "foreground": "#838383",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": [
                        "support.function.builtin.python",
                        "support.function.magic.python",
                        "storage.type.function.lambda.python"
                    ],
                    "settings": {
                        "foreground": "#4ec9aa",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": [
                        "storage.type.class.python",
                        "storage.type.function.python"
                    ],
                    "settings": {
                        "foreground": "#4ec9aa",
                        "fontStyle": ""
                    }
                }
            ]
        }
    },
    "workbench.colorCustomizations": {
        "[azure]": {
            "sideBar.background": "#181D26",
            "tab.activeBorder": "#b46274",
            "sideBar.border": "#81818188",
            "tab.inactiveBackground": "#181D26",
            "tab.inactiveForeground": "#f8f8f0",
            "tab.activeForeground": "#f8f8f0",
            "menu.background": "#282b35",
            "editor.selectionBackground": "#414d628f",
            "editor.lineHighlightBackground": "#414d623a",
            "activityBar.background": "#25272e",
            "titleBar.activeBackground": "#414d628f",
            "editorGroupHeader.tabsBackground": "#25272e",
            "breadcrumb.foreground": "#97999c",
            "input.background": "#25272e",
            "input.foreground": "#f8f8f0",
            "input.placeholderForeground": "#97999c",
            "tab.unfocusedHoverBorder": "#508aaa",
            "editorIndentGuide.activeBackground1": "#b46274a9",
            "editorIndentGuide.background1": "#92546156",
            "editorCodeLens.foreground": "#97999c"
        },
        "[Cold Horizon, No Italics]": {
            "editor.wordHighlightBackground": "#25375d", // orig: "#1b2947"
            "editor.wordHighlightStrongBackground": "#25375d",
            "editor.findMatchBackground": "#25375d",
            "editor.findMatchHighlightBackground": "#25375d",
            "editor.findRangeHighlightBackground": "#25375d",
            "editor.selectionBackground": "#25375d",
            "editor.lineHighlightBackground": "#25375d"
        }
    },
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.commandsToSkipShell": [
        // Ensure the toggle sidebar visibility keybinding skips the shell
        "workbench.action.toggleSidebarVisibility",
        // Send quick open's keybinding to the shell
        "-workbench.action.quickOpen"
      ],
    "markdown.preview.fontSize": 15,
    "workbench.editor.showTabs": "multiple",
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.userWords": [
        "alacritty",
        "endregion",
        "functools",
        "gitlens",
        "jupyter",
        "Monokai",
        "numpy",
        "typer"
    ],
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.settings.openDefaultSettings": false,
    "editor.formatOnSave": false,
    "workbench.settings.useSplitJSON": false,
    // replaced by .clang-format file in each project
    // "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, SpacesBeforeTrailingComments: 3, ColumnLimit: 99, PointerAlignment: Left, AllowShortFunctionsOnASingleLine: InlineOnly, IndentWidth: 4, AlignConsecutiveMacros: Consecutive}",
    "files.associations": {
        "*.h": "c",
        "*.hpp": "cpp",
        ".proj-cfg": "properties"
    },
    "files.watcherInclude": [
        "testing"
    ],
    "[c]": {
        "editor.wordBasedSuggestions": true,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "explorer.confirmDragAndDrop": false,
    "python.languageServer": "Pylance",
    "explorer.confirmDelete": false,
    "[python]": {
        "editor.formatOnType": false,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "isort.args":[
        "--profile", "black",
        "--group_by_package", "false"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "window.title": "${rootPath} ${separator} ${activeEditorShort}",
    "git.confirmSync": false,
    "redhat.telemetry.enabled": false,
    "tabnine.experimentalAutoImports": true,
    "editor.dragAndDrop": false,
    "jake.autoDetect": "on",
    "grunt.autoDetect": "on"
}