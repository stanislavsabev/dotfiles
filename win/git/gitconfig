	email = bezraboten.34@gmail.com
	name = stanislavsabev
[diff]
	tool = vscode
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[alias]
	s = status
	sv = status -v
	b = branch
	co = !git checkout
	cam = !git commit -am
	cb = !git rev-parse --abbrev-ref HEAD
	curr-branch = !git rev-parse --abbrev-ref HEAD
	undolast = !git reset HEAD~1
	unstageall = !git reset -- .
	recommit = commit -c ORIG_HEAD
	undo = reset HEAD~
	resethard = reset HEAD --hard
	amend = !git commit --amend
	commit-noedit = !git commit --amend --no-edit
	cnoe = !git commit --amend --no-edit
    acnoe = !git add --all && git commit --amend --no-edit
	pushrefs = !git push origin HEAD:refs/for/master
	lv = !git log
	logv = !git log
    lg = !git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit
    lgstat = !git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit --stat
    logstat = !git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit --stat
	logsha = !git log --pretty=format:'%H'
	lgsha = !git log --pretty=format:'%H'
	sha = !git log -1 --pretty=format:'%H'
	longsha = !git log -1 --pretty=format:'%H'
	shortsha = !git log -1 --pretty=format:'%h'
	wt = !git worktree
    stat = !git diff HEAD~1 HEAD --stat
[core]
	editor = code --wait
