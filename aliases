#!/usr/bin/env bash

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# NAVIGATION
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../.."

# SOME MORE LS ALIASES
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"
alias home="cd"
alias dow="cd ~/Downloads"
alias doc="cd ~/Documents"
alias dev="cd ~/dev"
alias p="cd $PROJ_DIR"

# PYTHON VENV ALIASES
alias va="source ./$VENV_DIR/bin/activate"
alias da="deactivate"
alias makevenv="python -m venv $VENV_DIR && va"
alias uppip="python -m pip install --upgrade pip"
alias pir="pip install -r "

# UTIL ALIASES
alias aliases="$EDITOR $DOTFILES_DIR/aliases"
alias functions="$EDITOR $DOTFILES_DIR/functions"
alias dotfiles="$EDITOR -n $DOTFILES_DIR"
alias sand="cd $PROJ_DIR/sandbox_projects"
alias pysand="$EDITOR -n $PROJ_DIR/sandbox_projects/pysandbox"
alias gitconfig="$EDITOR $DOTFILES_DIR/gitconfig"
alias gitconfig_local="$EDITOR .git/config"

# OTHER
alias path="tr ':' '\n' <<< \"$PATH\""

alias vba-parser="source ~/bin/open_vba_parser_proj.sh"

alias kport="source ~/bin/kill_port.sh"

# GET WEEK NUMBER
alias week='date +%V'
# GET UTC TIME
alias utc="date -u +'%H:%M:%S UTC'"

