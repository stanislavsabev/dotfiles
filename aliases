#!/bin/bash

# NAVIGATION
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# SHORTHAND COMMANDS
alias la="ls -lah"
alias ll="ls -lh"
alias l.="ls -d .*"
alias rf="rm -rf"

# COMMON DIRECTORIES
alias dow="cd ~/Downloads"
alias dtop="cd ~/Desktop"
alias doc="cd ~/Documents"
alias home="cd"

alias p="cd $PROJECTS_DIR"
alias dev="cd ~/dev"
alias be="cd $BE_DIR"
alias mig="cd $MIGRATIONS_DIR"
alias q2c="cd $Q2C_DIR"
alias cd-tests="cd tests/integration/src"
alias fe="cd $FE_DIR"
alias soa="cd $SOA_DIR"
alias myupdate="$EDITOR -n $PROJECTS_DIR/my_update"

# PYTHON
alias da="deactivate"
alias pir="pip install -r"
alias uppip="python -m pip install --upgrade pip"

# SHOW/HIDE HIDDEN FILES
alias showhidden="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# MY SCRIPTS
alias kport="source ~/bin/kill_port.sh"
alias service="source ~/bin/start_service.sh"

# EASIER SCRIPTS EDITING
alias services="$EDITOR $DOTFILES_DIR/services"
alias aliases="$EDITOR $DOTFILES_DIR/aliases"
alias functions="$EDITOR $DOTFILES_DIR/functions"
alias exports="$EDITOR $DOTFILES_DIR/exports"
alias paths="$EDITOR $DOTFILES_DIR/paths"
alias dotfiles="$EDITOR -n $DOTFILES_DIR/"
alias openscripts="$EDITOR ~/bin"
alias scripts="$EDITOR ~/bin"
alias bashprofile="$EDITOR $DOTFILES_DIR/.bash_profile"
alias bashrc="$EDITOR $DOTFILES_DIR/.bashrc"

# GIT
alias gitconfig="$EDITOR $DOTFILES_DIR/gitconfig"
alias gitconfig_local="$EDITOR ./.git/config"
alias wt-ls="wt-list"
alias wt-co="wt-checkout"
alias wt-mv="wt-move"
alias wt-rm="wt-remove"

# Chrono
alias week='date +%V'
alias utc="date -u +'%H:%M:%S UTC'"
alias short-date="date +%Y-%m-%d"
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'

# Misc
alias brew='env PATH="${PATH//$(pyenv root)\/shims:/}" brew'

alias cd="cdnvm"
alias path="tr ':' '\n' <<< \"$PATH\""

alias soapythonpath='export PYTHONPATH="$PYTHONPATH:$(pwd)/src"'
alias soaconfigfile="set -o allexport && source ./configs/envs/local.env && set +o allexport"
alias pysand="$EDITOR $PROJECTS_DIR/pysandbox"

alias expandalias="expand-alias"

alias add="git add --all"
alias addfiles="git add --"
alias push="git push"
alias rebase="git rebase"
alias pull="git pull"
alias fetch="git fetch --all"
alias addall="git add --all"
alias cam="git commit -am "
alias commit="git commit"
alias commitam="git commit -am"
alias status="git status"
alias statusv="git status -v"
alias s="git status"
alias sv="git status -v"
alias b="git branch"
alias co="git checkout"
alias curr-branch="git rev-parse --abbrev-ref HEAD"
alias undolast="git reset HEAD~1"
alias unstageall="git reset -- ."
alias recommit="commit -c ORIG_HEAD"
alias undo="reset HEAD~"
alias resethard="reset HEAD --hard"
alias amend="git commit --amend"
alias commit-"noedit=git commit --amend --no-edit"
alias cnoe="git commit --amend --no-edit"
alias acnoe="git add --all && git commit --amend --no-edit"
alias pushrefs="git push origin HEAD:refs/for/master"
alias logv="git log"
alias lv="git log"
alias lg="git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit"
alias log="git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit"
alias lgstat="git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit --stat"
alias logstat="git log --graph --pretty=format:'%C(yellow)%h%Creset %<(65,trunc)%s - %C(bold blue)%<(7,trunc)%an%Creset %C(bold red)%d %Creset%C(green)(%cr)' --abbrev-commit --stat"
alias logsha="git log --pretty=format:'%H'"
alias lgsha="git log --pretty=format:'%H'"
alias sha="git log -1 --pretty=format:'%H'"
alias longsha="git log -1 --pretty=format:'%H'"
alias shortsha="git log -1 --pretty=format:'%h'"
alias wt="git worktree"
alias stat="git diff HEAD~1 HEAD --stat"
alias diff="git diff"
alias diffhead="git diff HEAD"